{
  "version": 2,
  "builds": [
    { "src": "./index.js", "use": "@vercel/node" },
    { "src": "./middleware.js", "use": "@vercel/edge" }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/index.js",
      "headers": {
        "Access-Control-Allow-Origin": "https://cosc-484-project-front-git-7cbc3b-abdalla-abdelmagids-projects.vercel.app",
        "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type, Authorization, X-Requested-With, Accept",
        "Access-Control-Allow-Credentials": "true"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/index.js",
      "headers": {
        "Access-Control-Allow-Origin": "https://cosc-484-project-front-git-7cbc3b-abdalla-abdelmagids-projects.vercel.app",
        "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type, Authorization, X-Requested-With, Accept",
        "Access-Control-Allow-Credentials": "true"
      }
    }
  ]
} 